rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user documents (for displaying user info)
      allow read: if true;
      
      // Only admins can create new users
      allow create: if isAdmin();
      
      // Only admins can update users (role, linkedPlayerId)
      allow update: if isAdmin();
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Players collection
    match /players/{playerId} {
      // Anyone can read players
      allow read: if true;
      
      // Admins can do anything
      allow create, delete: if isAdmin();
      
      // Users can update their own linked player
      // Player must be linked to the authenticated user, and linkedUserId cannot be changed
      allow update: if isAdmin() || 
                       (isAuthenticated() && 
                        resource.data.linkedUserId == request.auth.uid &&
                        request.resource.data.linkedUserId == request.auth.uid);
    }
    
    // Games collection
    match /games/{gameId} {
      // Anyone can read games
      allow read: if true;
      
      // Only admins can create, update, or delete games
      allow create, update, delete: if isAdmin();
    }
    
    // Events collection
    match /events/{eventId} {
      // Anyone can read events
      allow read: if true;
      
      // Only admins can create, update, or delete events
      allow create, update, delete: if isAdmin();
    }
    
    // Results collection
    match /results/{resultId} {
      // Anyone can read results
      allow read: if true;
      
      // Only admins can create, update, or delete results
      allow create, update, delete: if isAdmin();
    }
    
    // Settings collection
    match /settings/{docId} {
      // Anyone can read settings (needed for displaying app branding/theme)
      allow read: if true;
      
      // Only admins can create or update settings
      allow create, update: if isAdmin();
    }
  }
}
